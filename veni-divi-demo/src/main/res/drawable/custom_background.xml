<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <inset android:insetBottom="4dp" android:insetLeft="6dp" android:insetRight="6dp" android:insetTop="4dp">
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />
                <solid android:color="#f0f" />
            </shape>
        </inset>
    </item>
    <item>
        <inset android:insetBottom="4dp" android:insetLeft="4dp" android:insetRight="4dp" android:insetTop="4dp">
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />
                <solid android:color="#6f0f" />
            </shape>
        </inset>
    </item>
</selector>